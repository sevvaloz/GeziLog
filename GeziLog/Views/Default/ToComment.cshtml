
<section class="w3l-contact" id="contact">
    <div class="container py-5">
        <div class="contacts12-main py-md-3">
            <div class="header-section text-center">
                <h3 class="mb-md-5 mb-4">Yorum bırakın</h3>
            </div>
            <form method="post">
                <div class="main-input">
                    <input type="hidden" name="Blogid" placeholder="ID" value="@ViewBag.value" class="contact-input" />
                    <input type="text" name="UserName" placeholder="Ad" class="contact-input" required="required" />
                    <input type="email" name="Mail" placeholder="Mail" class="contact-input" required="required" />
                    <textarea name="CommentArea" placeholder="Yorum" class="contact-textarea contact-input" required="required" ></textarea>
                </div>
                <div class="text-right">
                    <input type="submit" value="GÖNDER" class="btn-primary btn theme-button"/>
                </div>
            </form>
        </div>
    </div>
</section>
