@using GeziLog.Models.Classes
@model List<About>

@{
    ViewBag.Title = "About";
    Layout = "~/Views/Shared/_ViewLayout.cshtml";
}

<section class="w3l-breadcrumb py-5">
    <div class="container">
        <h6 class="sub-title"></h6>
        <div class="header-section">
            <h3>Hakkımızda</h3>
        </div>
    </div>
</section>


@foreach (var x in Model)
{
    <div class="about py-md-5 py-4">
        <div class="container">
            <div>
                <div class="row p-3 align-items-center">
                    <div class="col-6 col-md-3 px-5">
                        <img src="@x.PhotoAboutURL" alt="" class="rounded-circle img-fluid">
                    </div>
                    <div class="col-12 col-md-9 text-start px-5 mt-md-0 mt-4">
                        <p>
                            @x.Content
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
}



