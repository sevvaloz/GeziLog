@using GeziLog.Models.Classes
@model List<About>

@{
    ViewBag.Title = "About";
    Layout = "~/Views/Shared/_ViewLayout.cshtml";
}

<section class="w3l-breadcrumb py-5">
    <div class="container">
        <h6 class="sub-title"></h6>
        <div class="header-section">
            <h3>Hakkımızda</h3>
        </div>
    </div>
</section>

@foreach (var x in Model)
{
    <div class="about py-5">
        <div class="container py-lg-3">
            <div class="row">
                <div class="col-lg-6 publication-about-grid">
                    <p class="mb-4"> @x.Content </p>
                </div>
                <div class="col-lg-6 col-md-6 mt-lg-0 mt-5 real-about-grid">
                    <img src=@x.PhotoAboutURL alt=" " class="img-fluid" />
                </div>
            </div>
        </div>
    </div>
}
