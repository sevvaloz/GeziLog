
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_ViewLayout.cshtml";
}


<body>
    @Html.Action("Partial", "Default")


    @foreach (var y in Model.Value3)
    {
        <section class="w3l-blog">
            <br />
            <section class="w3l-index5">
                <div class="row abouthy-img-grids no-gutters">
                    <div class="col-lg-6 img-one order-1">
                        <a href="/Default/Single"><img src="@y.PhotoBlogURL" alt=" " class="img-fluid"></a>
                    </div>
                    <a href="/Default/Single/@y.ID" class="col-lg-6 order-2 blog-article-posts bg-color-one">
                        <div class="blog-post d-flex flex-wrap align-content-between">
                            <div class="post-content">
                                <ul class="author-date mb-4 d-flex align-items-center">
                                    <li class="circle-lg avatar"><img src="~/web2/images/avatar.png" class="img-responsive" alt=""></li>
                                    <li>by <b>admin</b></li>
                                    <li><span class="fa fa-clock-o" aria-hidden="true"></span> @y.Date </li>
                                </ul>
                                <h4 class="blog_post_title mb-4"> @y.Title </h4>
                                <p> @y.Content </p>
                            </div>
                            <div class="read-button mt-lg-5">Read story <span class="fa fa-long-arrow-right" aria-hidden="true"></span></div>
                        </div>
                    </a>
                </div>
            </section>
        </section>
    }

</body>

